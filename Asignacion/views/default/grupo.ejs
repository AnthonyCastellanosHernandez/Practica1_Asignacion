<% include layout %>
<div class="row">
  <div class="page-header">
  </div>
</div>

<div class="row">
  <div class="col-md-12">
        <h2>Lista de grupos</h2>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Grupo</th>
          <th>Seccion</th>
        </tr>
      </thead>
      <tbody data-bind="foreach: grupos">
        <tr>
          <td data-bind="text: nombreGrupo"></td>
           <td>
             <div class="btn-group"> <button style="margin-right:20px;" class="btn btn-primary"
                    data-toggle="modal"
                    data-target="#modalGrupoEditar"
                    data-bind="click: $root.editar">
                    Editar </button>
                    <button style="margin-right:20px;" class="btn btn-danger"
                        data-bind="click: $root.eliminar" onclick="location.href = 'http://localhost:3000/Grupos';">Eliminar</button>
                    </div>
                </td>
              </tr>
      </tbody>
    </table>
    <button type="button" class="btn btn-danger waves-effect" data-toggle="modal" data-target="#modalGrupo">
        Agregar
    </button>
    <div class="modal fade" id="modalGrupo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form data-bind="submit: agregar" id="form-contacto" >
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Agregar</h4>
                    </div>
                    <div class="modal-body">

                        <div class="form-group">
                            <label for="nombreGrupo">Nombre</label>
                            <input type="text" class="form-control" name="nombreGrupo" id="nombreGrupo"
                            data-bind="value: grupoNuevo.nombreGrupo"
                            />
                        </div>

                        <div class="form-group">
                            <label for="idSeccion">Seccion</label>
                            <select class="form-control" data-bind="options: secciones, optionsText: 'nombre', value: grupoNuevo.seccion"></select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                        <button type="submit" onclick="location.href = 'http://localhost:3000/Grupos';" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>



     <!-- Modal Editar -->
    <div class="modal fade" id="modalGrupoEditar" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel" data-bind="if: grupoCargado">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form data-bind="submit: editar">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Editar grupo</h4>
                    </div>
                  <div class="modal-body">

                        <div class="form-group">
                            <label for="nombreGrupo">Nombre</label>
                            <input type="text" class="form-control" name="nombreGrupo" id="nombreGrupo"
                            data-bind="value: grupoCargado().nombreGrupo"
                            />
                        </div>

                        <div class="form-group">
                            <label for="idSeccion">Seccion</label>
                            <select class="form-control" data-bind="options: secciones, optionsText: 'nombre', value: grupoCargado().seccion"></select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Editar</button>
                    </div>
                </form>
            </div>
 </div>
</div>

  </div>
</div>
<% include footer %>
<script src="/javascripts/grupoScript.js"></script>
